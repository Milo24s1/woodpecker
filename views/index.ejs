<script>
    $(document).ready(function () {


        lazyLoad();
        function lazyLoad(next) {
            $.ajax({
                url : '/search',
                data: {
                    next : next
                },
                method: 'post',
                datatype: 'json',
                success: function (data) {
                    let tableDom = '';
                    console.log(data.rowData.length > 0);
                    if(true){
                        for(i=0;i<data.rowData.length;i++){
                            tableDom += `<tr>
                                        <th scope="row">${data.rowData[i].company}</th>
                                        <td>${data.rowData[i].campaign}</td>
                                        <td>${data.rowData[i].prospects}</td>
                                        <td>${data.rowData[i].delivered}</td>
                                        <td>${data.rowData[i].opened}</td>
                                        <td>${data.rowData[i].responses}</td>
                                        </tr>`
                        }
                        $("table").append(tableDom)
                    }

                    if(data.next != undefined){
                        lazyLoad(data.next);
                    }


                },
                error : function (xhr, ajaxOptions, thrownError) {

                    if(xhr.status!=200) {
                        alert('Something went wrong');
                    }
                }
            });
        }
    });


</script>
